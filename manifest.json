{
  "manifest_version": 3,
  "name": "OnlyStack-Extension",
  "version": "1.0.0",
  "description": "OnlyStack-Extension",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["emoji-data.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OnlyStack-Extension"
  }
}
